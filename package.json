{
  "name": "2025-gridchallenge",
  "version": "1.0.0",
  "description": "2025 Grid Challenge - Testing pan/zoom implementations",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "spec": "node gen_spec.js > SPEC.md",
    "manual": "node generate_manual_test.js > manual_test.html",
    "repomix": "npm run spec && (playwright test --reporter=json --reporter=list --reporter-option json:outputFile=test-results.json || true) && repomix"
  },
  "keywords": [
    "grid",
    "testing",
    "playwright",
    "pan",
    "zoom"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}
